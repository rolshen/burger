<div id ="headerSection">
  <h1>Eat Da Burger!</h1>
</div>

<div id="middleSection">

  <div class="leftMiddle">
    <div class="uneaten center">
      {{#each burger}}
        {{#unless devoured}}
          {{> burgers/burgerBlock devoured=1}}
        {{/unless}}
      {{/each}}
    </div>
  </div>

  <div class="centerMiddle">
    <div class="center">
      <input id="burgerName" type="text" placeholder="Name Your Burger" data-eaten="0">
      <br><br>
      <button id="addBurger" type="button">Add Your Burger</button>
    </div>
  </div>

  <div class="rightMiddle">
    <div class="eaten center">
      {{#each burger}}
        {{#if devoured}}
          {{> burgers/burgerBlock devoured=0}}
        {{/if}}
      {{/each}}
    </div>
  </div>

</div>

